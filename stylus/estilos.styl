@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818182

body
	font-family 'Varela Round', sans-serif
	text-size 16px

figure
	margin 0 
	
a 
	text-decoration none
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.border-bottom
	border-bottom 1px solid gris_claro
.container
	font-size 0
	padding 1.4rem
	text-align center
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.author
	color gris_claro
.header
	height 3.5em
	
	//a 
	//	display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5 em
		
.song
	display inline-block 
	font-size 1rem
	margin-bottom 1em
	margin-right 1em 
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0